<body>
    <div class="container">

    <h1>To-Do List</h1>
    <input type="text" id="todo-input" placeholder="Add a new task...">
    <button onclick="addTask()">Add Task</button>
    <ul id="todo-list"></ul>
</div>
</body>

<script>

const todoInput = document.getElementById('todo-input');
const todoList = document.getElementById('todo-list');

// Function to add a new task
function addTask()
 {
 

    const task = todoInput.value.trim();  // Get input value
     if (task === "") return;  // Do nothing if the input is empty

    // Create new list item
    const listItem = document.createElement("li");
    listItem.innerHTML = `${task} <button onclick="deleteTask(this)">Delete</button>`;
    listItem.addEventListener('click', toggleComplete);

    // Append the new task to the list
    todoList.appendChild(listItem);

    // Clear the input field
    todoInput.value = '';
}

// Function to mark a task as complete/incomplete
function toggleComplete(event) {
    const listItem = event.target.closest('li');
    listItem.style.textDecoration = listItem.style.textDecoration === 'line-through' ? 'none' : 'line-through';
}

// Function to delete a task
function deleteTask(button) {
    const listItem = button.closest('li');
    todoList.removeChild(listItem);
}


</script>
